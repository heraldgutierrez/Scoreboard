	body
		div#controls
			table(border='1')
				tr
					td
						center
							span Home Score : 
							span#home_score 0
					td
					td
						center
							span Away Score : 
							span#away_score 0
				tr
					td
						div#home_controls.team_control
							center
								div
									| Home :
									select#home_team_select
										option(value='HOME' selected='selected') - Home -
										option(value='BLACK') Black
										option(value='BLUE') Blue
										option(value='GREEN') Green
										option(value='RED') Red
										option(value='WHITE') White
										option(value='YELLOW') Yellow

								br
								table
									tr
										td
											button#home_add_point_2 Add 2 Points
										td
											button#home_add_point_3 Add 3 Points
									tr
										td
											button#home_remove_point Remove 1 Point
										td
											button#home_add_point_1 Add 1 Point

					td
						div#main_controls.game_controls
							center
								table
									tr
										td
											center
												button#start_timer Start Clock
												button#stop_timer Stop Clock
									tr
										td
											center
												input#mins(type='number' min='0' max='30' placeholder='Mins') &nbsp;
												input#secs(type='number' min='0' max='60' placeholder='Secs')
												button#change_time Change Time

					td
						div#away_controls.team_control
							center
								div
									| Away :
									select#away_team_select
										option(value='AWAY' selected='selected') - Away -
										option(value='BLACK') Black
										option(value='BLUE') Blue
										option(value='GREEN') Green
										option(value='RED') Red
										option(value='WHITE') White
										option(value='YELLOW') Yellow

								br
								table
									tr
										td
											button#away_add_point_2 Add 2 Points
										td
											button#away_add_point_3 Add 3 Points
									tr
										td
											button#away_remove_point Remove 1 Point
										td
											button#away_add_point_1 Add 1 Point
										